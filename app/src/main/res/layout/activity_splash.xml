<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ctm.project3.SplashActivity"
    xmlns:tools="http://schemas.android.com/tools">>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:id="@+id/splash_title"
        android:textSize="40dp"
        android:text="@string/splash_title"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_above="@id/splash_line"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/splash_title"
        android:src="@drawable/ic_hotel_black_24dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/splash_title"
        android:id="@+id/splash_logo"
        android:src="@drawable/ic_local_bar_black_24dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <View
        android:layout_centerInParent="true"
        android:layout_below="@id/splash_title"
        android:id="@+id/splash_line"
        android:background="#d1d1d2"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"></View>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/splash_line"
        android:id="@+id/spalshtxt"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="모캉스 전용 앱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/Loading"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>