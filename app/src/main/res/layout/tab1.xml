<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tab1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/nearbtn"
            android:layout_marginHorizontal="2dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/button_customblue"
            android:text="내 주변" />


        <Button
            android:layout_marginHorizontal="2dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/button_customblue"
            android:text="타임 세일" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/editlinear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="이름으로 검색 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editns"
                android:background="@drawable/editcustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7" />
            <Button
                android:id="@+id/nsbtn"
                android:layout_marginLeft="5dp"
                android:background="#0b8dff"
                android:textColor="#ffffff"
                android:text="검색"
                android:layout_width="50dp"
                android:layout_height="30dp" />

        </LinearLayout>
<View
    android:layout_marginTop="2dp"
    android:background="#bababa"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>
<TextView
    android:text="옵션 검색"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="희망 옵션"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:textSize="12dp"
                    android:text="고데기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:checked="true"
                    android:textSize="12dp"
                    android:text="스파"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:checked="true"
                    android:textSize="12dp"
                    android:text="안마의자"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:textSize="12dp"
                    android:text="고사양PC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:textSize="12dp"
                    android:text="노래방"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:textSize="12dp"
                    android:text="금연"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:textSize="12dp"
                    android:text="스낵바"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:textSize="12dp"
                    android:text="스크린"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:checked="true"
                    android:textSize="12dp"
                    android:text="스타일러"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/detailbtn"
            android:text="상세 검색"
            android:background="#0b8dff"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="진행중인 이벤트"
        android:textSize="20dp"
        android:textStyle="bold" />



    <android.support.v4.view.ViewPager
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="130dp"></android.support.v4.view.ViewPager>

</LinearLayout>