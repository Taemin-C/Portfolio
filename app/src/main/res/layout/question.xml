<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#b6b3b3"
            android:text="답변 대기"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ic_lock_outline_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="입실시간 문의"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="abcd1234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_margin="10dp"
            android:background="#8b8a8a"
            android:layout_width="1dp"
            android:layout_height="15dp"></View>
        <TextView
            android:text="2019.10.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginVertical="5dp"
        android:background="#818181"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"></View>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#0539f5"
            android:text="답변 완료"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="컴퓨터 사양이 어떻게 되나요?"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="kim324"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_margin="10dp"
            android:background="#8b8a8a"
            android:layout_width="1dp"
            android:layout_height="15dp"></View>
        <TextView
            android:text="2019.10.21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="#818181"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"></View>
</LinearLayout>