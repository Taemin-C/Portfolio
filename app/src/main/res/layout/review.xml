<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="2dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#0b8dff"
        android:gravity="center"
        android:text="리뷰"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginVertical="5dp"
        android:padding="3dp"
        android:background="@drawable/editlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="사진 리뷰만"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="꿀팁순"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="최신순"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:background="@drawable/editcustom"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"

                android:text="asd4e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <RatingBar
                    android:layout_marginHorizontal="7dp"
                    android:layout_gravity="center"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    />
            <TextView
                android:textSize="10dp"
                android:text="3일전"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="@drawable/ic_insert_emoticon_black_24dp"
                android:text="꿀팁"
                android:layout_marginLeft="70dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="20dp"
                android:text="+3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:text="일반실 이용"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="여기 근처에서 젤 좋은 것 같아요"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/editlinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="사장님 댓글"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="5dp"
            android:text="이용해 주셔서 감사합니다. 또 오세요~ ^^"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>