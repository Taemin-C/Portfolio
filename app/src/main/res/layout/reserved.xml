<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@drawable/editlinear"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_gravity="center"
    android:text="예 약 정 보"
    android:textSize="40dp"
    android:textColor="#0b8dff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"/>
    <TextView
        android:layout_marginBottom="5dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="대구 두류 A모텔"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="40dp"
        android:textSize="18dp"
        android:text="예약 룸 : 일반실"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="18dp"
        android:text="예약 유형 : 숙박"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="체크인 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#0b8dff"
            android:text="10월 30일(수) 18시"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="체크아웃 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#0b8dff"
            android:text="10월 31일(목) 13시"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="숙소 위치 : @@@@@@@@@@@"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <fragment

            android:id="@+id/tmap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraTargetLat="35.863"
            map:cameraTargetLng="128.555"
            map:cameraZoom="15"
            ></fragment>
    </LinearLayout>
</LinearLayout>