<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30dp"
            android:padding="5dp"
            android:text="ID ID ID ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="20dp"
            android:text="내 정보"
            android:background="@drawable/button_customblue"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:gravity="center"
    android:padding="5dp"
    android:layout_weight="3"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="포인트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="1000"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
        <View
            android:layout_weight="0.03"
            android:background="#bcbcbc"
            android:layout_width="0dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="보유 쿠폰"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:id="@+id/checkoutlist"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="5dp"
            android:text="숙소 이용내역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
    android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>
    <LinearLayout
        android:id="@+id/reservedgo"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="20dp"
            android:padding="5dp"
            android:text="현재 예약된 숙소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="5dp"
            android:text="찜한 숙소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="5dp"
            android:text="남긴 후기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="3dp"></View>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="5dp"
            android:text="공지사항"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="5dp"
            android:text="문의하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:id="@+id/Rule"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="5dp"
            android:text="예약/취소 규정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginVertical="2dp"
        android:background="#bcbcbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>